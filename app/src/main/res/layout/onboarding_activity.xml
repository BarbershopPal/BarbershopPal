<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#363636"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/welcomeImg"
        android:layout_width="0dp"
        android:layout_height="@dimen/logo_medium"
        android:src="@drawable/welcome_img"
        android:layout_marginTop="@dimen/margin_higher_tiny"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/indicatorDots">

    </android.support.v4.view.ViewPager>

    <android.support.design.widget.TabLayout
        android:id="@+id/indicatorDots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/btnOnBoardingSkip"
        app:tabGravity="center"
        app:tabBackground="@drawable/tab_selector"
        app:tabIndicatorHeight="0dp"/>

    <View
        android:id="@+id/btnOnBoardingSkip"
        android:layout_width="0dp"
        android:layout_height="@dimen/box_spacing_large"
        android:background="@drawable/box_rounded_corners"
        android:backgroundTint="#CC9042"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginHorizontal="@dimen/side_margin_big"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_minuscule"
        android:text="@string/skip"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_size_medium"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="@id/btnOnBoardingSkip"
        app:layout_constraintLeft_toLeftOf="@id/btnOnBoardingSkip"
        app:layout_constraintRight_toRightOf="@id/btnOnBoardingSkip"
        app:layout_constraintBottom_toBottomOf="@id/btnOnBoardingSkip"/>

</android.support.constraint.ConstraintLayout>